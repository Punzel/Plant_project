{% extends 'base.jinja' %}

{% block title %}Hello Admin! add to the database{% endblock %}

{% block content %}
<h1>Plants</h1>
<p>
Submit new plant here:
<br />
<form method="POST" action="{{ url_for('add_plant') }}">
    {{ form.hidden_tag() }}
    {{ form.name.label }} {{ form.name(size=20) }}
    {% if form.name.errors %}
    {% for error in form.name.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    {{ form.latin_name.label }} {{ form.latin_name(size=20) }}
    {% if form.latin_name.errors %}
    {% for error in form.latin_name.errors %}
    <span class=text-error>{{ error }}</span>
    {% endfor %}
    {% endif %}
    <br />
    <input type="submit" value="Go">
</form>
</p>
{% endblock %}