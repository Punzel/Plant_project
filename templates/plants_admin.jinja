{% extends 'base.jinja' %}

{% block title %}Admin Add and EditPlants{% endblock %}

{% block content %}
<h1>Plants</h1>
<p>
<table border="1" cellpadding="5" cellspacing="5">
    <tr>
    <th>Name</th>
    <th>German Name</th> 
    <th>Latin Name</th>
    <th>Plant Information</th>
    <th>Light</th>
    <th>Placement</th>
    <th>Insect Friendly</th>
    <th>Other Information</th>
    <th>Edit</th>
    <th>Add Pictures</th>
    <th>Pictures</th>
    </tr>
    {% for item in data %}
          <tr>
         <td>{{ item.name }} </td>
         <td>{{ item.german_name }}</td>
         <td>{{ item.latin_name }}</td>
         <td>{{ item.plant_information }}</td>
         <td>{{ item.light }}</td>
         <td>{{ item.placement }}</td>
         <td>{{ item.insect_friendly }}</td>
         <td>{{ item.other_information }}</td>
         <td><a href="{{ url_for('edit', id=item.id) }}">Edit</a></td>
         <td><a href="{{ url_for('upload_picture', id=item.id) }}">Add Picture</a></td>
       
         {% for pic in pictures %}
            {% if item.id==pic.plant_id %}
                <td> <img src="static/pictures/{{ pic.picturepath }}"  width="120" height="90" /> </td>
           {% else %}
             <td> no pictures </td>
            {% endif %}
            {% endfor %}
        {% endfor %}
        </tr>

     
    
<br />
<br>
<a href="{{ url_for('add_plant') }}">Add Plant</a>
</p>
{% endblock %}